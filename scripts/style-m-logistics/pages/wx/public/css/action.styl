@import "../../../../components/style/style.styl"
body {
  background: #F5F5F5;
}

::-webkit-input-placeholder {
  color: #C5C5C5;
}

.mod-action-container {
  .icon-operate{
    background: url(//img.wuage.com/14792908479726icon-operate.png) no-repeat;
    background-size: 2.0rem;
  }
  .inner {
    width: 17.55rem;
    margin: 0 auto;
    background: #fff;
  }
  .mod-address {
    font-size: 0.75rem;
    margin-top: 0.6rem;
    .address {
      box-sizing: border-box;
      padding: 0 0.8rem;
      height: 2.2rem;
      line-height: 2.2rem;
      font-size: 0.75rem;
      color: #959595;
      border-bottom: 1px solid #e5e5e5;
      overflow: hidden;
      .label {
        float: left;
        width: 3.825rem;
        &:before {
          content: '';
          background: #77C225;
          width: 0.4rem;
          height: 0.4rem;
          display: inline-block;
          border-radius: 50%;
          margin-right: 0.4rem;
        }
      }
      .edit {
        float: left;
        border: none;
        width: 11.55rem;
        line-height: 1.2rem;
        height: 1.2rem;
        color: #656565;
        font-size: 0.75rem;
        font-family: $web-font-base;
        margin-top: 0.5rem;
      }
      &:last-child {
        border-bottom: none;
        .label {
          &:before {
            background: #FF7300;
          }
        }
      }
    }
  }
  .mod-info {
    font-size: 0.75rem;
    margin-top: 0.5rem;
    .info {
      box-sizing: border-box;
      padding: 0 0.8rem;
      height: 2.2rem;
      line-height: 2.2rem;
      font-size: 0.75rem;
      color: #959595;
      border-bottom: 1px solid #e5e5e5;
      overflow: hidden;
      .label {
        float: left;
        width: 3.825rem;
      }
      .edit {
        float: left;
        border: none;
        width: 11.55rem;
        color: #656565;
        font-size: 0.75rem;
        font-family: $web-font-base;
        line-height: 1.2rem;
        height: 1.2rem;
        margin-top: 0.5rem;
      }
      &:last-child {
        border-bottom: none;
      }
      &.weight, &.mobile {
        input {
          width: 8.6rem;
          margin-right: 0.625rem;
        }
        .icon-del {
          display: inline-block;
          width: 1.6rem;
          height: 2.2rem;
          margin-right: 0.4rem;
          background: url('data:image/png;base64,') no-repeat;
          background-position: center center;
          background-size: 0.9rem;;
        }
        .unit {
          float: right;
        }
      }
    }
  }
  .mod-btn {
    margin-top: 1.2rem;
    .btn-full {
      width: 100%;
      height: 2.2rem;
      line-height: 2.2rem;
      font-size: 0.8rem;
      background: $web-color-base;
      border: none;
      color: #fff;
      border-radius: 0;
      &.disabled {
        background: #C5C5C5;
      }
    }
  }
}

/*m-picker*/
.picker-header {
  height: 40px;
  width: 100%;
  background-color: #F5F5F5;
}

.picker-header .picker-title {
  float: left;
  width: 50%;
  text-align: center;
  line-height: 40px;
  color: #959595;
  font-size: 15px;
}